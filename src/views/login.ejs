<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar Conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>
      
      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg bg-secondary p-3 me-2 bg-opacity-75 rounded-4">
          <h4 class="text-center my-3" style="font-weight: 700">Crie sua Conta</h4>
          <p class="text-justify text-white">Se você ainda não tem conta, preencha o formulário abaixo:</p>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label>E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark my-3">Criar minha conta</button>
          </form>

        </div>
        <div class="col-lg bg-secondary p-3 me-2 bg-opacity-75 rounded-4">
          <h4 class="text-center bold my-3" style="font-weight: 700">Faça seu Login</h4>
          <p class="text-justify text-white">Se você ja tem uma conta, faça seu login abaixo:</p>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label>E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Entrar</button>
          </form>
        </div>
      </div>
    </div>  
    <div class="col-lg-2"></div>
  </div>
</div>
    
<%- include('includes/footer')  %>
