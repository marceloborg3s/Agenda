<% if (errors.length > 0) { %>
  <div class="row">
    <div class="">
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
  <div class="row">
    <div class="">
      <div class="alert alert-success">
        <% success.forEach(function(success) { %>
          <p><%= success %></p>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>
